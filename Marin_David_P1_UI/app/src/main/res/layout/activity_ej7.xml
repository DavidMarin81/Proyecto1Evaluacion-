<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ej7Activity">

    <Button
        android:id="@+id/botonCentralEj7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Central"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonSupIzqEj7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUP. IZQ"
        app:layout_constraintBottom_toTopOf="@+id/botonCentralEj7"
        app:layout_constraintEnd_toStartOf="@+id/botonSupDerEj7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01" />

    <Button
        android:id="@+id/botonSupDerEj7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUP. DER"
        app:layout_constraintBottom_toBottomOf="@+id/botonSupIzqEj7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/botonSupIzqEj7"
        app:layout_constraintTop_toTopOf="@+id/botonSupIzqEj7" />

    <Button
        android:id="@+id/botonInfIzqEj7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INF. IZQ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/botonInfDerEj7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonCentralEj7"
        app:layout_constraintVertical_bias="0.945" />

    <Button
        android:id="@+id/botonInfDerEj7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INF. DER"
        app:layout_constraintBottom_toBottomOf="@+id/botonInfIzqEj7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/botonInfIzqEj7"
        app:layout_constraintTop_toTopOf="@+id/botonInfIzqEj7" />

</androidx.constraintlayout.widget.ConstraintLayout>