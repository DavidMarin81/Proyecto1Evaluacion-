<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ej3Activity">


    <TextView
        android:id="@+id/textViewEj4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:text="Â¿Utilizas iExplorer?"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonEj4Si"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="SI"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewEj4" />

    <Button
        android:id="@+id/botonEj4No"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="NO"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/botonEj4Si"
        app:layout_constraintStart_toEndOf="@+id/botonEj4Si"
        app:layout_constraintTop_toTopOf="@+id/botonEj4Si" />

    <Button
        android:id="@+id/botonEJ4AVeces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="A VECES"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/botonEj4No"
        app:layout_constraintStart_toEndOf="@+id/botonEj4No"
        app:layout_constraintTop_toTopOf="@+id/botonEj4No" />

</androidx.constraintlayout.widget.ConstraintLayout>